@model RelatedProductViewModel;
@{
    Layout = null;
}

<section class="related-product-area section_gap_bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Sizin İçin</h1>
                    <p>
                        Sizin İçin Seçilmiş Rastgele Ürünler
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    @for (var i = 0; i < Model.Products.Count; i++)
                    {
                        var product = Model.Products[i];
                        <div class="col-lg-4 col-md-4 col-sm-6">
                            <div class="single-related-product d-flex">
                                <a href="#">
                                    <img style="max-width:50px;max-height:50px;" src="@(product.Images.FirstOrDefault(x=>x.IsMain==true)?.Url==null?"/KarmaUI/img/resimyok.jpg":(product.Images.FirstOrDefault(x=>x.IsMain==true)?.Url))" alt="">
                                </a>
                                <div class="desc">
                                    <a href="~/Ürün/Detay?urunAdi=@product.ProductName.Replace(" ","-")" class="title">@product.ProductName</a>
                                    <div class="price">
                                        <h6>@product.Price ₺</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ctg-right">
                    <a href="#" target="_blank">
                        <img class="img-fluid d-block mx-auto" src="~/KarmaUI/img/category/c5.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
