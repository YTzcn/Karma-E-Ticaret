@model ProductListViewModel

<!-- Start Best Seller -->
<section class="lattest-product-area pb-40 category-list">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <!-- single product -->
            <div class="col-lg-4 col-md-6">
                <div class="single-product">
                    <img class="img-fluid" src="@item.Images.FirstOrDefault(x=>x.IsMain==true).Url" alt="">
                    <div class="product-details">
                        <h6>
                            @item.ProductName
                        </h6>
                        <div class="price">

                            <h6>@item.Price ₺</h6>
                        </div>
                        <div class="prd-bottom">

                            <a href="" class="social-info">
                                <span class="ti-bag"></span>
                                <p class="hover-text">Sepete Ekle</p>
                            </a>
                            <a href="" class="social-info">
                                <span class="lnr lnr-heart"></span>
                                <p class="hover-text">İstek Listesine Ekle</p>
                            </a>
                            <a href="" class="social-info">
                                <span class="lnr lnr-sync"></span>
                                <p class="hover-text">Karşılaştır</p>
                            </a>
                            <a href="" class="social-info">
                                <span class="lnr lnr-move"></span>
                                <p class="hover-text">Detaylı İncele</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</section>
<!-- End Best Seller -->