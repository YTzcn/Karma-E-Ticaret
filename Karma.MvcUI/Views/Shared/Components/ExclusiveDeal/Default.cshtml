@model ExclusiveDealViewModel
<section class="exclusive-deal-area">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 no-padding exclusive-left">
                <div class="row clock_sec clockdiv" id="clockdiv">
                    <div class="col-lg-12">
                        <h1>Kampanya Fırsatlarını Kaçırmayın!</h1>
                    </div>
                    <div class="col-lg-12">
                       
                    </div>
                </div>
                <a href="" class="primary-btn">Şimdi Alışveriş Yap</a>
            </div>
            <div class="col-lg-6 no-padding exclusive-right">
                <div class="active-exclusive-product-slider">
                    <swiper-container navigation="true" loop="true" autoplay-delay="2500" autoplay-disable-on-interaction="true">
                        @foreach (var item in Model.Products)
                        {
                            <swiper-slide>
                                <div class="single-exclusive-slider">
                                    <img class="img-fluid" src="@(item.Product.Images.FirstOrDefault(x=>x.IsMain==true)?.PublicId==null?"https://res.cloudinary.com/drwyecoiw/image/upload/c_scale,h_300/f_auto,q_auto/vqzqxfbthc3ez7i18pim":"https://res.cloudinary.com/drwyecoiw/image/upload/c_scale,h_300/f_auto,q_auto/"+(item.Product.Images.FirstOrDefault(x=>x.IsMain==true)?.PublicId))" alt="@item.Product.ProductName" />
                                    <div class="product-details">
                                        <div class="price">
                                            <br />
                                            <h3>@item.NewPrice ₺</h3>
                                            <br />
                                        </div>
                                        <a href="~/Ürün/Detay?urunAdi=@item.Product.ProductName.Replace(" ","-")">
                                            <h4>
                                                @item.Product.ProductName
                                            </h4>
                                        </a>
                                        <div class="add-bag d-flex align-items-center justify-content-center">
                                            <a href="~/Sepet/AddToCart?productId=@item.Product.ProductId" class="add-btn" href=""><span class="ti-bag"></span></a>
                                            <span class="add-text text-uppercase">Sepete Ekle</span>
                                        </div>
                                    </div>
                                </div>
                            </swiper-slide>
                        }


                    </swiper-container>
                </div>

