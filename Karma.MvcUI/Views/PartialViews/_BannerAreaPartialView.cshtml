@{
    string controller = ViewBag.BannerArea1;
    string Action = ViewBag.BannerArea2;
    string Parameter = ViewBag.BannerArea3;
}
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>@ViewBag.BannerTitle</h1>
                <nav class="d-flex align-items-center">
                    <a href="~/@controller">@controller</a>
                    @if (!String.IsNullOrEmpty(controller))
                    {
                        <a href="~/@controller/@Action"><span class="lnr lnr-arrow-right"> @Action</span></a>
                    }
                    @if (!String.IsNullOrEmpty(Parameter))
                    {
                        <a href="~/@controller/@Action/@Parameter"><span class="lnr lnr-arrow-right"> @Parameter</span></a>
                    }

                </nav>
            </div>
        </div>
    </div>
</section>
