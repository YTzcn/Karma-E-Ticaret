@model Karma.MvcUI.Models.LeftNavbarViewModel
@{
    Layout = null;
}

<div class="col-xl-3 col-lg-4 col-md-5">
    <div class="sidebar-categories">
        <div class="head">Kategoriler</div>
        <ul class="main-categories">
            @foreach (var x in Model.Categories)
            {
                <li class="main-nav-list">
                    @*<a data-toggle="collapse" href="~/Kategori/@x.CategoryName.Trim()" aria-expanded="false" aria-controls="">
                <span class="lnr lnr-arrow-right"></span>@x.CategoryName
                </a>*@
                    <a href="~/Kategori/@x.CategoryName">@x.CategoryName</a>
                </li>
            }
        </ul>
    </div>
    <div class="sidebar-filter mt-50">

        <div class="top-filter-head">Filtreler</div>
        <form action="~/Kategori/@ViewContext.RouteData.Values["categoryName"]" method="get">
            <div class="common-filter">
                <div class="head">Markalar</div>

                <ul>
                    @foreach (var x in Model.Brands)
                    {
                        <li class="filter-list">
                            <input value="@x.BrandName" class="pixel-radio custom-radio" type="checkbox" id="@x.BrandName" name="brands" @(((IList<string>)ViewBag.Brands).Contains(x.BrandName) != false ? "checked" : "")><label for="@x.BrandName">@x.BrandName</label>
                        </li>
                    }
                </ul>
            </div>
            <div class="common-filter">
                <div class="head">Renkler</div>

                <ul>
                    @foreach (var x in Model.Colors)
                    {
                        <li class="filter-list"><input class="pixel-radio" type="checkbox" id="@x" value="@x" name="color" @(((IList<string>)ViewBag.Color).Contains(x) != false ? "checked" : "")><label for="@x">@x</label></li>
                    }

                </ul>

            </div>



            <div class="common-filter">
                <div class="head">Fiyat Aralığı</div>


                <input type="number" value="@ViewBag.lowerValue" name="lowerValue" placeholder="Min Fiyat" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Min Fiyat'" class="single-input">
                <input type="number" value="@ViewBag.upperValue" name="upperValue" placeholder="Max Fiyat" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Max Fiyat'" class="single-input">

                <br />
                <button type="submit" class="genric-btn primary circle arrow">Uygula</button>
            </div>
        </form>
    </div>
</div>
