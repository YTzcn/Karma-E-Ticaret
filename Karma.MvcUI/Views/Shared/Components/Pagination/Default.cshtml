@model ProductListViewModel
<section class="lattest-product-area pb-40 category-list">
    <div class="row">
        @if (Model.ProductsCount == 0)
        {
            <div class="container text-center mt-5">
                <img src="https://www.pngplay.com/wp-content/uploads/9/Loupe-Download-Free-PNG.png" alt="Ürün Bulunamadı" class="img-fluid" style="max-width: 100px;">
                <p class="mt-3">Üzgünüz, aradığınız ürünü bulamadık.</p>
                <p>Lütfen kriterleri değiştirmeyi düşünebilirsiniz.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <a href="~/Ürün/Detay?urunAdi=@item.ProductName.Replace(' ','-')">
                            <img src="@(item.Images.FirstOrDefault(x=>x.IsMain==true)?.PublicId==null?"https://res.cloudinary.com/drwyecoiw/image/upload/c_scale,h_250,w_250/f_auto,q_auto/vqzqxfbthc3ez7i18pim":"https://res.cloudinary.com/drwyecoiw/image/upload/c_scale,h_250,w_250/f_auto,q_auto/"+(item.Images.FirstOrDefault(x=>x.IsMain==true)?.PublicId))" alt="@item.ProductName" />
S                        </a>
                        <div class="product-details">
                            <p>
                                <a href="~/Ürün/Detay?urunAdi=@item.ProductName.Replace(' ','-')">
                                    @(item.ProductName.Length > 30 ? item.ProductName.Substring(0, 30) + "..." : item.ProductName)
                                </a>
                            </p>

                            <div class="price">
                                <h6>@item.Price ₺</h6>
                            </div>
                            <div class="prd-bottom">
                                <a href="/Sepet/AddToCart?productId=@item.ProductId" class="social-info">
                                    <span class="ti-bag"></span>
                                    <p class="hover-text">Sepete Ekle</p>
                                </a>
                                <a href="" class="social-info">
                                    <span class="lnr lnr-heart"></span>
                                    <p class="hover-text">İstek Listesine Ekle</p>
                                </a>
                                <a href="" class="social-info">
                                    <span class="lnr lnr-sync"></span>
                                    <p class="hover-text">Karşılaştır</p>
                                </a>
                                <a href="/Ürün/Detay?urunAdi=@item.ProductName.Replace(' ','-')" class="social-info">
                                    <span class="lnr lnr-move"></span>
                                    <p class="hover-text">Detaylı İncele</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
