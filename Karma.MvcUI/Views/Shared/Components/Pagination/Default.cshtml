@model ProductListViewModel
<section class="lattest-product-area pb-40 category-list">
    <div class="row">
        @if (Model.ProductsCount == 0)
        {
            <div class="container text-center mt-5">
                <img src="https://www.pngplay.com/wp-content/uploads/9/Loupe-Download-Free-PNG.png" alt="Ürün Bulunamadı" class="img-fluid" style="max-width: 100px;">
                <p class="mt-3">Üzgünüz, aradığınız ürünü bulamadık.</p>
                <p>Lütfen kriterleri değiştirmeyi düşünebilirsiniz.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <img class="img-fluid" style="max-height:250px;min-height:250px;" src='@(item.Images.Count == 0 ? "/KarmaUI/img/resimyok.jpg" : item.Images.FirstOrDefault(x => x.IsMain == true)?.Url)' alt="">
                        <div class="product-details">
                            <h6>
                                @item.ProductName
                            </h6>
                            <div class="price">
                                <h6>@item.Price ₺</h6>
                            </div>
                            <div class="prd-bottom">
                                <a href="" class="social-info">
                                    <span class="ti-bag"></span>
                                    <p class="hover-text">Sepete Ekle</p>
                                </a>
                                <a href="" class="social-info">
                                    <span class="lnr lnr-heart"></span>
                                    <p class="hover-text">İstek Listesine Ekle</p>
                                </a>
                                <a href="" class="social-info">
                                    <span class="lnr lnr-sync"></span>
                                    <p class="hover-text">Karşılaştır</p>
                                </a>
                                <a href="" class="social-info">
                                    <span class="lnr lnr-move"></span>
                                    <p class="hover-text">Detaylı İncele</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
