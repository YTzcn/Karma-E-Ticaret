@{
}
<!-- Start category Area -->
<section class="category-area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="row">
                    @foreach (var item in Model.Categories)
                    {
                        <div class="col-lg-4 col-md-6">
                            <a href="~/Kategori/@item.CategoryName">
                                <div class="single-deal" href="##">
                                    <div class="overlay"></div>
                                    <img class="img-fluid w-100" src="@item.ImagePath" alt="@item.CategoryName">
                                    <div class="deal-details">
                                        <h6 class="deal-title">@item.CategoryName</h6>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End category Area -->
