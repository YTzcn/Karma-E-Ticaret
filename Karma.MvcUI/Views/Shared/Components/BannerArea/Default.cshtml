@model BannerAreaViewModel

<section class="banner-area">
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-start">
            <div class="col-lg-12">
                <div class="active-banner-slider owl-carousel">
                    @foreach (var item in Model.ProductList)
                    {
                        <div class="row single-slide align-items-center d-flex">
                            <div class="col-lg-5 col-md-6">
                                <div class="banner-content">
                                    <a href="~/Ürün/Detay?urunAdi=@item.ProductName.Replace(" ","-")"> <h1>@item.ProductName</h1></a>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="add-bag d-flex align-items-center">
                                        <a class="add-btn" href="~/Sepet/AddToCart?productId=@item.ProductId"><span class="lnr lnr-cross"></span></a>
                                        <span class="add-text text-uppercase">Sepete Ekle</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="banner-img">
                                    <img class="img-fluid" style="max-height:500px;max-height:300px;" src="@(item.Images.FirstOrDefault(x=>x.IsMain==true)?.Url==null?"/KarmaUI/img/resimyok.jpg":(item.Images.FirstOrDefault(x=>x.IsMain==true)?.Url))" alt="">
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</section>
